<?xml version="1.0" encoding="utf-8"?>
<!-- This creates a layered background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The base background color (white) -->
    <item android:drawable="@android:color/white" />

    <!--
    This is the custom shape.
    It's a rectangle that we will rotate and position off-screen
    to create a large, sweeping curve effect.
    -->
    <item
        android:left="150dp"
        android:right="-300dp"
        android:top="-450dp"
        android:bottom="300dp">
        <rotate android:fromDegrees="-20">
            <shape android:shape="rectangle">
                <solid android:color="#0077b6" />
            </shape>
        </rotate>
    </item>

</layer-list>